{
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.minimap.enabled": false,
  "editor.tabSize": 2,
  "breadcrumbs.enabled": true,
  "editor.formatOnSave": true,
  "editor.linkedEditing": true,
  // Настройки Prettier
  "prettier.trailingComma": "all",
  "prettier.semi": true,
  "prettier.useEditorConfig": true,
  "scss.format.newlineBetweenSelectors": false,
  "css.format.newlineBetweenSelectors": false,
  // Настройки ESLint
  "eslint.format.enable": true,
  "emmet.triggerExpansionOnTab": true,
  // Если шрифт поддерживает стрелочки и т.п. знаки, то включить их (лигатуры)
  "editor.fontLigatures": true,
  // Тип курсора
  "editor.cursorStyle": "line",
  "workbench.sideBar.location": "right",
  "explorer.confirmDelete": false,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "emmet.includeLanguages": {
    "*.njk": "html",
    "*.nunjucks": "html",
    "*.nj": "html"
  },
  "cssPeek.peekFromLanguages": [
    "html",
    "django-html",
    "laravel-blade",
    "razor",
    "vue",
    "blade",
    "pug",
    "jade",
    "handlebars",
    "php",
    "twig",
    "md",
    "nunjucks",
    "javascript",
    "javascriptreact",
    "erb",
    "typescript",
    "typescriptreact",
    "HTML (Eex)",
    "html-eex",
    "ejs",
    "njk"
  ],
  "CSSNavigation.activeHTMLFileExtensions": [
    "html",
    "ejs",
    "erb",
    "php",
    "hbs",
    "js",
    "ts",
    "jsx",
    "tsx",
    "vue",
    "twig",
    "svelte",
    "njk",
    "nunjucks"
  ],
  "css.enabledLanguages": ["html", "njk", "nj"],
  "nunjucksTemplate.preserveEmptyLine": 1,
  "stylelint.snippet": ["css", "less", "postcss", "scss", "sass"],
  "stylelint.validate": ["css", "less", "postcss", "scss", "sass"]
}
